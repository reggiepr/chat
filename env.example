# ======= Server =======
RAGBOT_SECRET=change-me
UPLOAD_DIR=./data/uploads
CHROMA_DIR=./data/chroma

# ======= Auth (demo) =======
# Comma-separated list of demo API keys. Replace with DB/IdP in prod.
API_KEYS=demo-abc123,demo-xyz789

# ======= LLM settings =======
# LLM_PROVIDER: openai | ollama
LLM_PROVIDER=ollama
# For OpenAI-compatible endpoints:
OPENAI_API_KEY=sk-...
OPENAI_BASE_URL= # optional, e.g. http://localhost:8000/v1 for vLLM/OpenRouter-compatible
OPENAI_MODEL=gpt-4o-mini

# For Ollama:
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:7b

# ======= Embeddings =======
# EMBEDDINGS_PROVIDER: hf | openai
EMBEDDINGS_PROVIDER=hf
HF_EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small
